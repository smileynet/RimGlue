<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef Name="VBY_NeoChunkRecipeBase_Blunt" Abstract="True">
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
        <li MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveMeleeWeaponTable</li>
		<li MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveCraftingTable</li>
		<li>CraftingSpot</li>
    </recipeUsers>
  </RecipeDef>


  <RecipeDef ParentName="VBY_NeoChunkRecipeBase_Blunt">
    <defName>VBY_Make_HammerStone</defName>
    <label>make hammer stone</label>
    <description>Filter through chunks of rock for just the right stone to use as a tool.</description>
    <jobString>Making hammer stone.</jobString>
    <workAmount>700</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
	<researchPrerequisite MayRequire="PrimitiveProduction.velcroboy333">VBY_PrimitiveProduction</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <VBY_HammerStone>1</VBY_HammerStone>
    </products>
  </RecipeDef>
  
  <RecipeDef ParentName="VBY_NeoChunkRecipeBase_Blunt">
    <defName>VBY_Make_StoneHammer</defName>
    <label>make stone hammer</label>
    <description>Craft a stone hammer with a handle.</description>
    <jobString>Making stone hammer.</jobString>
    <workAmount>4500</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
	<researchPrerequisite>VBY_PrimitiveTools</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
		</filter>  
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
	  <thingDefs>
	    <li>WoodLog</li>
	  </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VBY_StoneHammer>1</VBY_StoneHammer>
    </products>
	<skillRequirements>
	  <Crafting>4</Crafting>
	</skillRequirements>
  </RecipeDef>
  
