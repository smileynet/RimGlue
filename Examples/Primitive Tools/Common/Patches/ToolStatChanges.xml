<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
        <mods>
		  <li>Toolmetrics Redux (Continued)</li>
        </mods>
			<match Class="PatchOperationSequence">
        <success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "Tool_Sickle"]/equippedStatOffsets</xpath>					
					<value>  
						<PlantHarvestYield>0.18</PlantHarvestYield>
				   </value>
				</li>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "Tool_Scythe"]/equippedStatOffsets</xpath>					
					<value>  
						<PlantHarvestYield>0.22</PlantHarvestYield>
				   </value>
				</li>
				<li Class="PatchOperationRemove">					
					<xpath>Defs/ThingDef[defName = "Tool_Shovel"]/equippedStatOffsets/PlantHarvestYield</xpath>
				</li>
				<li Class="PatchOperationReplace">					
					<xpath>Defs/ThingDef[defName = "Tool_Whistle"]/equippedStatOffsets/TrainAnimalChance</xpath>
					<value>  
						<TrainAnimalChance>0.30</TrainAnimalChance>
				   </value>
				</li>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "Tool_Whistle"]/equippedStatOffsets</xpath>
					<value>  
						<TameAnimalChance>0.20</TameAnimalChance>
				   </value>
				</li>
			</operations>
        </match>
	</Operation>


  <Operation Class="PatchOperationFindMod">
        <mods>
		  <li>Medieval Madness: Tools of the Trade</li>
        </mods>
			<match Class="PatchOperationSequence">
        <success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "MM_mallet"]/equippedStatOffsets</xpath>					
					<value>
						<SculptingSpeed>0.30</SculptingSpeed>
						<StonecuttingSpeed>0.30</StonecuttingSpeed>
				   </value>
				</li>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "MM_Sickle"]/equippedStatOffsets</xpath>					
					<value>  
						<PlantHarvestYield>0.18</PlantHarvestYield>
				   </value>
				</li>
				<li Class="PatchOperationAdd">					
					<xpath>Defs/ThingDef[defName = "MM_scythe"]/equippedStatOffsets</xpath>					
					<value>  
						<PlantHarvestYield>0.22</PlantHarvestYield>
				   </value>
				</li>
			</operations>
        </match>
	</Operation>	

	<Operation Class="PatchOperationFindMod">
        <mods>
		  <li>[TMC] EFT Sharpsticks</li>
        </mods>
			<match Class="PatchOperationSequence">
        <success>Always</success>
			<operations>
				<li Class="PatchOperationConditional">
				  <xpath>Defs/ThingDef[defName = "TMC_EFTMelee_Shovel"]/equippedStatOffsets</xpath>
				  <nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "TMC_EFTMelee_Shovel"]</xpath>
					<value>  
						<equippedStatOffsets>
						   <PlantWorkSpeed>0.11</PlantWorkSpeed>
						   <MiningSpeed>0.11</MiningSpeed>
						</equippedStatOffsets>
					</value>
				  </nomatch>
				  <match Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "TMC_EFTMelee_Shovel"]/equippedStatOffsets</xpath>
					<value>
						<PlantWorkSpeed>0.11</PlantWorkSpeed>
						<MiningSpeed>0.11</MiningSpeed>
					</value>
				  </match>
				</li>
				<li Class="PatchOperationReplace">					
					<xpath>Defs/ThingDef[defName = "TMC_EFTMelee_BrownKnife"]/equippedStatOffsets</xpath>					
					<value>  
						<equippedStatOffsets>
						   <ButcheryFleshEfficiency>0.11</ButcheryFleshEfficiency>
						   <CookSpeed>0.11</CookSpeed>
						   <FoodPoisonChance>-0.07</FoodPoisonChance>
						</equippedStatOffsets>
				   </value>
				</li>
			</operations>
        </match>
	</Operation>
	
	
</Patch>