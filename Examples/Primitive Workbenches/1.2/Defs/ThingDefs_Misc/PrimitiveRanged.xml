  <ThingDef ParentName="VBY_PrimitiveRangedWeapon">
    <defName>VBY_Boomerang</defName>
    <label>boomerang</label>
    <description>A piece of wood shaped to fly throught the air as straight as possible when thrown. It is designed to be thrown with great force with the intent of bludgening animals or enemies from a distance.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/HDM_Boomerang</texPath>   
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>                      
    <costList>
      <WoodLog>20</WoodLog>      
    </costList>
    <statBases>
      <WorkToMake>2800</WorkToMake>
      <Mass>0.6</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.500</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.50</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedBasic</li>
    </weaponTags>
    <recipeMaker>
	  <researchPrerequisite Inherit="False"/>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
	    <label>throw boomerang</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VBY_BoomerangProjectile</defaultProjectile>
        <warmupTime>1.45</warmupTime>
        <range>20.9</range>
        <soundCast>ThrowMolotovCocktail</soundCast>              
      </li>
    </verbs>
    <tools>
      <li>
        <label>boomerang</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  
