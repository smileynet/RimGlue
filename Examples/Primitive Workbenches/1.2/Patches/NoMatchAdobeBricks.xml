<?xml version="1.0" encoding="utf-8" ?>

<Patch>


<Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>Medieval Times Unofficial Update</li>
		  <li>Medieval Times Unofficial Update No Nan and legendary</li>
		  <li>Ceramics</li>
          <li>Ceramics VEF</li>
		  <li>Materials+</li>
		  <li>Fertile Fields [1.1]</li>
        </mods>
			<nomatch Class="PatchOperationSequence">
			<operations>
					<li Class="PatchOperationAdd">					
					<xpath>Defs</xpath>
					<value>


				<ThingDef ParentName="StoneBlocksBase">
					<defName>VBY_BlocksAdobe</defName>
					<label>adobe blocks</label>
					<description>Blocks of fired adobe. Adobe is soft but effective for quick, dry shelter.</description>
					<graphicData>
						<texPath>Things/Item/Resource/VBY_AdobeBlocks</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<statBases>
					  <Mass>1</Mass>
					  <SharpDamageMultiplier>0.12</SharpDamageMultiplier>
					</statBases>
					<stuffProps>
					  <color>(204,102,0)</color>
					  <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
					  <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
					  <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
					  <stuffAdjective>adobe</stuffAdjective>
					  <statFactors>
						<Beauty>0.9</Beauty>  
						<MaxHitPoints>0.8</MaxHitPoints>
						<WorkToBuild>4.5</WorkToBuild>
						<WorkToMake>0.9</WorkToMake>
					  </statFactors>
					</stuffProps>
				  </ThingDef>

				  <RecipeDef ParentName="MakeStoneBlocksBase">
					<defName>Make_FiredAdobe</defName>
					<label>make fired adobe blocks</label>
					<description>Fires wet clay paste into usable adobe blocks.\n\nMakes 20 bricks.</description>
					<workAmount>900</workAmount>
					<ingredients>
					  <li>
						<filter>
						  <thingDefs>
							<li>VBY_ClayPaste</li>
						  </thingDefs>
						</filter>
						<count>20</count>
					  </li>
					</ingredients>
					<fixedIngredientFilter>
					  <thingDefs>
						<li>VBY_ClayPaste</li>
					  </thingDefs>
					</fixedIngredientFilter>
					<products>
					  <VBY_BlocksAdobe>20</VBY_BlocksAdobe>
					</products>
					<recipeUsers Inherit="False">
						<li>VBY_PrimitiveKiln</li>
						<li>VBY_PrimitiveKiln_Rotated</li>
					</recipeUsers>
				  </RecipeDef>
				  
				   </value>
				</li>
			</operations>
        </nomatch>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
		  <li>Ceramics</li>
          <li>Ceramics VEF</li>
		  <li>Materials+</li>
		  <li>Fantasy Goblins Updated</li>
		  <li>Fertile Fields [1.1]</li>		  
        </mods>
			<nomatch Class="PatchOperationSequence">
			<operations>
					<li Class="PatchOperationAdd">					
					<xpath>Defs</xpath>
					<value>
				  
				  <RecipeDef>
						<defName>VBY_MakeClayFromHay</defName>
						<label>make wet clay clumps</label>
						<description>Make wet clay clumps from mud and haygrass.\n\nMakes 20 clumps of wet clay.</description>
						<jobString>Making wet clay clumps.</jobString>
						<effectWorking>Sculpt</effectWorking>
						<soundWorking>Recipe_Sculpt</soundWorking>
						<workAmount>200</workAmount>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Hay</li>
									</thingDefs>
								</filter>
								<count>75</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Hay</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<VBY_ClayPaste>20</VBY_ClayPaste>
						</products>
						<!--<workSkill>Crafting</workSkill>-->
						<recipeUsers>
							<li>CraftingSpot</li>
							<li>VBY_PrimitiveCraftingTable</li>
							<li>VBY_PrimitiveKiln</li>
							<li>VBY_PrimitiveKiln_Rotated</li>
						</recipeUsers>
					</RecipeDef>
				  
				   </value>
				</li>
			</operations>
        </nomatch>
	</Operation>
	
	
	
	
</Patch>