<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[JPT] Human Resources</li>
		</mods>
			<match Class="PatchOperationSequence">
				<operations>
					<li Class="PatchOperationAdd">
						<xpath>Defs/WorkGiverDef[defName = "Research"]/fixedBillGiverDefs</xpath>
						<value>
							<li>VBY_PrimitiveResearchTable</li>
							<li>VBY_PrimitiveResearchSpot</li>
						</value>
					</li>
					<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VBY_PrimitiveResearchTable" or defName = "VBY_PrimitiveResearchSpot"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
						<value>
							<li>BookShelf</li>
						</value>
					</li>
			</operations>
		</match>
	</Operation>
	
	
</Patch>