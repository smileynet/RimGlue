	<Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>ZARS Tribalism</li>
        </mods>
        <match Class="PatchOperationSequence">			
            <operations>
                <li Class="PatchOperationReplace">					
		          <xpath>Defs/ThingDef[defName="TailoringSpot"]/statBases/WorkTableWorkSpeedFactor</xpath>
		            <value>
						<WorkTableWorkSpeedFactor>0.3</WorkTableWorkSpeedFactor>
		            </value>
				</li>
				<li Class="PatchOperationAdd">					
		          <xpath>Defs/ThingDef[defName="Smokepit"]/costList</xpath>
		            <value>
						<VBY_PrimitiveFlint>2</VBY_PrimitiveFlint>
		            </value>
				</li>
				<li Class="PatchOperationAdd">					
		          <xpath>Defs/ThingDef[defName="StoneOven"]</xpath>
		            <value>
					  <costList>
						<VBY_PrimitiveFlint>2</VBY_PrimitiveFlint>
					  </costList>	
		            </value>
				</li>
				<li Class="PatchOperationAdd">					
		          <xpath>Defs/ThingDef[defName="TribalLoreFire"]/costList</xpath>
		            <value>
						<VBY_PrimitiveFlint>2</VBY_PrimitiveFlint>
		            </value>
				</li>
			</operations>
        </match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
