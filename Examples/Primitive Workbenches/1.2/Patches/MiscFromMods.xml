    <mods>
        <li>Colony Manager</li>
    </mods>
	<success>Always</success>
    <nomatch Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">					
		      <xpath>Defs/ThingDef[defName="VBY_NeolithicManagerSpot" or defName="VBY_StoneManagerBench"]</xpath>
