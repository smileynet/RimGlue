<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Project RimFactory Revived</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Medieval Times Unofficial Update</li>
				<li>Ceramics</li>
				<li>Ceramics VEF</li>
				<li>Materials+</li>
				<li>Fertile Fields [1.1]</li>
		    </mods>			
				<nomatch Class="PatchOperationSequence">
					<success>Always</success>
					<operations>
						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="PRF_FurnaceI"]/recipes</xpath>
							<value>
								<li>Make_FiredAdobe</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="PRF_FurnaceII"]/recipes</xpath>
							<value>
								<li>Make_FiredAdobe</li>
							</value>
						</li>
						<li Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="PRF_FurnaceIII"]/recipes</xpath>
							<value>
								<li>Make_FiredAdobe</li>
							</value>
						</li>
					</operations>
				</nomatch>	
		</match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Project RimFactory - Materials</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "PRF_GrindStone"]/recipes</xpath>
				<value>
					<li>VBY_SmashRocks</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "PRF_LimestoneBlocksBulk"]/products</xpath>
				<value>
					<VBY_PrimitiveFlint>15</VBY_PrimitiveFlint>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName = "PRF_BakeBrick"]/allowMixingIngredients</xpath>
				<value>
					<allowMixingIngredients>true</allowMixingIngredients>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName = "PRF_BakeBrickBulk"]/allowMixingIngredients</xpath>
				<value>
					<allowMixingIngredients>true</allowMixingIngredients>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "PRF_BakeBrick"]/ingredients/li/filter/thingDefs</xpath>
				<value>
					<li>VBY_ClayPaste</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "PRF_BakeBrickBulk"]/ingredients/li/filter/thingDefs</xpath>
				<value>
					<li>VBY_ClayPaste</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "PRF_BakeBrickBulk"]/recipeUsers</xpath>
				<value>
					<li>VBY_PrimitiveKiln</li>
					<li>VBY_PrimitiveKiln_Rotated</li>
				</value>
			</li>
		</operations>
		</match>
	</Operation>

</Patch>