			<li>
				<filter>
					<thingDefs>
						<li>Hay</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Hay</li>
			</thingDefs>
		</fixedIngredientFilter>
