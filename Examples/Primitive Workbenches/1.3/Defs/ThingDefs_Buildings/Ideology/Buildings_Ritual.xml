<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef MayRequire="Ludeon.RimWorld.Ideology" ParentName="BuildingBase">
    <defName>VBY_PrimitiveStylingStation</defName>
    <label>primitive styling station</label>
    <description>A table with a mirror made from polished stone and basic flint styling tools. People can use this to change their look.</description>
    <thingClass>Building_StylingStation</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>380</MaxHitPoints>
      <Flammability>0</Flammability>
      <Mass>80</Mass>
      <WorkTableWorkSpeedFactor>0.50</WorkTableWorkSpeedFactor>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Ideology/Misc/PrimitiveStylingStation/XIU_TableStyling</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
     <drawSize>(3.5,1.5)</drawSize>
     <!--  <drawSize>(3.15,2.35)</drawSize>
	  <drawOffset>(0,0,0.5)</drawOffset>-->
      <shadowData>
        <volume>(3,0.5,1)</volume>
      </shadowData>
      <damageData>
        <rect>(0.1,0.1,2.8,0.8)</rect>
      </damageData>
    </graphicData>
	<uiIconPath>Things/Building/Ideology/Misc/PrimitiveStylingStation/XIU_TableStyling_south</uiIconPath>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <canOverlapZones>false</canOverlapZones>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <size>(3,1)</size>
    <designationCategory>Misc</designationCategory>
    <costList>
      <VBY_PrimitiveFlint>30</VBY_PrimitiveFlint>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>85</costStuffCount>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>

</Defs>