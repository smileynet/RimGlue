<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="VBY_PotteryBase" Abstract="True">  
	<thingClass>Building_Art</thingClass>
      <altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<useHitPoints>true</useHitPoints>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsArt</li>
		</thingCategories>
		<thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
		<statBases>
			<Flammability>0</Flammability>
			<SellPriceFactor>1.10</SellPriceFactor>
			<MeditationFocusStrength>0.85</MeditationFocusStrength>
		</statBases>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtSculpture</nameMaker>
				<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
			</li>
			<li Class="CompProperties_MeditationFocus">
				<statDef>MeditationFocusStrength</statDef>
				<focusTypes>
					<li>Artistic</li>
				</focusTypes>
				<offsets>
					<li Class="FocusStrengthOffset_Quality">
						<curve>
							<points>
								<li>(0,0.12)</li> <!-- awful -->
								<li>(1,0.16)</li> <!-- poor -->
								<li>(2,0.20)</li> <!-- normal -->
								<li>(3,0.22)</li> <!-- good -->
								<li>(4,0.24)</li> <!-- excellent -->
								<li>(5,0.26)</li> <!-- masterwork -->
								<li>(6,0.28)</li> <!-- legendary -->
							</points>
						</curve>
					</li>
					<li Class="FocusStrengthOffset_BuildingDefsWithQuality">
						<defs>
							<li>VBY_PotterySmall</li>
							<li>VBY_PotteryMed</li>
						</defs>
						<radius>4.5</radius>
						<maxBuildings>10</maxBuildings>
						<focusPerQuality>
							<points>
								<li>(0,0.0)</li> <!-- awful -->
								<li>(1,0.0)</li> <!-- poor -->
								<li>(2,0.01)</li> <!-- normal -->
								<li>(3,0.01)</li> <!-- good -->
								<li>(4,0.01)</li> <!-- excellent -->
								<li>(5,0.02)</li> <!-- masterwork -->
								<li>(6,0.02)</li> <!-- legendary -->
							</points>
						</focusPerQuality>
						<explanationKey>MeditationFocusPerSculpture</explanationKey>
						<explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
					</li>
				</offsets>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_MeditationOffsetBuildingsNear</li>
		</placeWorkers>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<tradeTags>
			<li>Art</li>
		</tradeTags>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Artistic</workSkill>
			<unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
			<effectWorking>Sculpt</effectWorking>
			<soundWorking>Recipe_Sculpt</soundWorking>
			<recipeUsers>
				<li>VBY_PrimitiveKiln</li>
				<li>VBY_PrimitiveKiln_Rotated</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Plasteel</li>
					<li>Jade</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="VBY_PotteryBase">
    <defName>VBY_PotterySmall</defName>
    <label>small ceramic vase</label>
    <description>A kiln-fired vase.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/Ceramics</texPath>
	  <drawSize>1</drawSize>
    </graphicData>
    <fillPercent>0.20</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <Mass>1</Mass>
      <Beauty>25</Beauty>
      <WorkToMake>8000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
  </ThingDef>

  <ThingDef ParentName="VBY_PotteryBase">
    <defName>VBY_PotteryMed</defName>
    <label>medium ceramic vase</label>
    <description>A kiln-fired vase.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/Ceramics</texPath>
      <drawSize>1.35</drawSize>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>45</MaxHitPoints>
      <Mass>3</Mass>
      <Beauty>40</Beauty>
      <WorkToMake>14000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
  </ThingDef> 
    
  
</Defs>  