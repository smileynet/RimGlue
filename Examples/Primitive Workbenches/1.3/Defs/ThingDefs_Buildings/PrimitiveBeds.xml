  <ThingDef ParentName="FurnitureBase">
    <defName>VBY_HayCrib</defName>
    <label>primitive hay crib</label>
    <description>A crib made from hay. It's soft...ish and kinda pokey. The perfect size for a wee pawn.</description>
    <thingClass>Building_Bed</thingClass>
    <graphicData> 
      <texPath>Things/Building/Furniture/Bed/VBY_HayCribAlt</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
	  <shadowData>
		<volume>(0.7, 1.0, 0.6)</volume>
	  </shadowData>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
     <statBases>	 
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <WorkToBuild>400</WorkToBuild>
      <Mass>15</Mass>
      <BedRestEffectiveness>0.90</BedRestEffectiveness>
      <Comfort>0.60</Comfort>
      <ImmunityGainSpeedFactor>1.03</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.85</SurgerySuccessChanceFactor>
    </statBases>
    <costList>
	  <WoodLog>2</WoodLog> 	
	  <VBY_Haycloth>5</VBY_Haycloth>
	  <Hay>15</Hay>
    </costList>
    <size>(1,2)</size>
    <building>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>3</bed_healPerDay>
      <bed_maxBodySize>0.4</bed_maxBodySize>
	  <buildingTags>
        <li>Bed</li>
      </buildingTags>
    </building>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
    <fillPercent>0.35</fillPercent>
    <pathCost>35</pathCost>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <castEdgeShadows>False</castEdgeShadows>
	<interactionCellOffset>(1,0,0)</interactionCellOffset>
    <designationHotKey>Misc2</designationHotKey>
    <passability>PassThroughOnly</passability>
	<defaultPlacingRot>South</defaultPlacingRot>
    <drawGUIOverlay>True</drawGUIOverlay>	
    <researchPrerequisites>
      <li>VBY_PrimitiveProduction</li>
    </researchPrerequisites>
	<uiIconScale>0.6</uiIconScale>
  </ThingDef>
  
  
