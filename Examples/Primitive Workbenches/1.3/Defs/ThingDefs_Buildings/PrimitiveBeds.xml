<Defs>

  <ThingDef ParentName="BedWithQualityBase">
    <defName>VBY_Haybed</defName>
    <label>hay bed</label>
    <description>Bedding made from hay. It's soft...ish and kinda pokey.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/HDM_BedHay</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
	  <drawSize>(1.25,2.25)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <WorkToBuild>400</WorkToBuild>
      <Mass>15</Mass>
      <BedRestEffectiveness>0.90</BedRestEffectiveness>
      <Comfort>0.60</Comfort>
      <ImmunityGainSpeedFactor>1.03</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.85</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,2)</size>
    <costList>
	  <WoodLog>3</WoodLog> 	
	  <VBY_Haycloth>10</VBY_Haycloth>
	  <Hay>30</Hay>
    </costList>
    <building>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_healPerDay>3</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>42</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <techLevel>Neolithic</techLevel>
    <researchPrerequisites>
      <li>VBY_PrimitiveProduction</li>
    </researchPrerequisites>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>
  
