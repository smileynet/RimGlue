<?xml version="1.0" encoding="utf-8"?>
<Patch>

	 <!--= 100% mass is 0.026(mass of Cloth) =-->
	 <!--= 100% mass is 0.5(mass of Steel) =-->
	 
	<!--=============== Textiles ====================-->
	<Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>Massivity</li>
        </mods>
        <match Class="PatchOperationSequence">			
            <operations> 
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VBY_PrimitiveFlint"]/stuffProps/statFactors</xpath>
					<value>
						<Mass>2.2</Mass>
					</value>
				</li> 
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VBY_Haycloth"]/stuffProps/statFactors</xpath>
					<value>
						<Mass>0.89</Mass>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VBY_BlocksAdobe"]/stuffProps/statFactors</xpath>
					<value>
						<Mass>2</Mass>
					</value>
				</li>
			</operations>
        </match>
	</Operation>


</Patch>