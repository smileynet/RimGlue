        <li>Primitive Tools</li>
    </mods>
	<success>Always</success>
	<match Class="PatchOperationSequence">
	  <operations>
		<li Class="PatchOperationReplace">
		  <xpath>Defs/ThingDef[defName = "VBY_FlintSpear"]/recipeMaker/researchPrerequisite</xpath>
