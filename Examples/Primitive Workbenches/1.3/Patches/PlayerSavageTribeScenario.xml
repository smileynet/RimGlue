<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Playable Savage Tribe</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			  <li Class="PatchOperationAdd">
			  <success>Always</success>
					<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts</xpath>
						<value>
							<li Class="ScenPart_StartingThing_Defined">
								<def>StartingThing_Defined</def>
								<thingDef>VBY_PrimitiveFlint</thingDef>
								<count>30</count>
							</li>
						</value>    
			  </li>
			  <li Class="PatchOperationReplace">
			  <success>Always</success>
					<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "Bow_Short"]</xpath>
						<value>
							<thingDef>VBY_Boomerang</thingDef>
						</value>    
			  </li>
			  <li Class="PatchOperationSequence">
				  <success>Always</success>
					<operations>
					  <li Class="PatchOperationRemove">  
						<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "MeleeWeapon_Ikwa"]/../stuff</xpath>
					  </li>
					  <li Class="PatchOperationReplace">
						<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "MeleeWeapon_Ikwa"]</xpath>
							<value>
								<thingDef>VBY_SharpStick</thingDef>
							</value>    
					  </li>
					</operations>  
			  </li>
			  <li Class="PatchOperationSequence">
				  <success>Always</success>
					<operations>
					  <li Class="PatchOperationRemove">  
						<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "MeleeWeapon_Spear"]/../stuff</xpath>
					  </li>
					  <li Class="PatchOperationReplace">
						<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "MeleeWeapon_Spear"]</xpath>
							<value>
								<thingDef>VBY_FlintSpear</thingDef>
							</value>    
					  </li>
					</operations>  
			  </li>
			  <li Class="PatchOperationReplace">
			  <success>Always</success>
					<xpath>Defs/ScenarioDef[defName = "Player_Savage_Tribe"]/scenario/parts/li[@Class = "ScenPart_StartingThing_Defined"]/thingDef [text() = "Pila"]</xpath>
						<value>
							<thingDef>VBY_Atlatl</thingDef>
						</value>    
			  </li>
			</operations>
	   </match>
	</Operation>
   
</Patch> 