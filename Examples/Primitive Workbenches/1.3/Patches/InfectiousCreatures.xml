<?xml version="1.0" encoding="utf-8" ?>

<Patch>
  
  
  <Operation Class="PatchOperationFindMod">
    <mods>
	  <li>Infectious Creatures</li>
    </mods>
      <match Class="PatchOperationSequence">
      <operations>
		 <li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "VBY_PrimitiveButcherTable"]/recipes</xpath>
			<value>
			  <li>ExtractSnakeVenomGland</li>
			  <li>ExtractMegaSpiderVenomGland</li>
			</value>
		  </li>
		  </operations>			
      </match>
  </Operation>
  <Operation Class="PatchOperationFindMod">
    <mods>
	  <li>Infectious Creatures Lite</li>
    </mods>
      <match Class="PatchOperationSequence">
      <operations>
		 <li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "VBY_PrimitiveButcherTable"]/recipes</xpath>
			<value>
			  <li>ExtractSnakeVenomGland</li>
			</value>
		  </li>
		  </operations>			
      </match>
  </Operation>
  
</Patch>  