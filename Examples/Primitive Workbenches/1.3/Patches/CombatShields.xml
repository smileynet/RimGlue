<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Shields</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
	
<!-- Allow certain ranged weapons to be used with shields -->
   <li Class="PatchOperationAdd">
   <xpath>/Defs/ThingDef[defName="VBY_Boomerang"]/weaponTags</xpath>
   <value>
	<li>Shield_Sidearm</li>
   </value>
   </li>
   
   <li Class="PatchOperationAdd">
   <xpath>/Defs/ThingDef[defName="VBY_ThrowingRocks"]/weaponTags</xpath>
   <value>
	<li>Shield_Sidearm</li>
   </value>
   </li>
   
   <li Class="PatchOperationAdd">
   <xpath>/Defs/ThingDef[defName="VBY_Atlatl"]/weaponTags</xpath>
   <value>
	<li>Shield_Sidearm</li>
   </value>
   </li>
   
<!-- Don't allow certain melee weapons to be used with shields    

   <li Class="PatchOperationAdd">
   <xpath>/Defs/ThingDef[defName=""]/weaponTags</xpath>
   <value>
	<li>Shield_NoSidearm</li>
   </value>
   </li> 
   -->
   </operations>
   </match>
</Operation>
   
</Patch>   