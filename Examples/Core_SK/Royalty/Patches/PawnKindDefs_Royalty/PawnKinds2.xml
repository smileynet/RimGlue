<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="Refugee"]</xpath>
				<value>
					<apparelRequired>
						<li>MedievalTimes_Shirt_Tunic</li>
					</apparelRequired>	
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Refugee"]/weaponMoney</xpath>
				<value>
					<weaponMoney>100~300</weaponMoney>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>