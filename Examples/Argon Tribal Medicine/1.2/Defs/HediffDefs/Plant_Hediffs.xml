<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Shrooms poison --> 
  <HediffDef>
    <defName>TM_ShroomsPoison</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>shrooms poisoning</label>
    <description>Posion from raw shrooms. This colonist may suffer multiple heart attacks.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1</maxSeverity>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.08</severityPerDay>
        <showHoursToRecover>false</showHoursToRecover>
      </li>
    </comps>
      <stages>
		<li>
          <label>Minor</label>
		  <painOffset>0.2</painOffset>
		  <hediffGivers>
			<li Class="HediffGiver_Random">
				<hediff>HeartAttack</hediff>
				<mtbDays>26</mtbDays>
				<partsToAffect>
				  <li>Heart</li>
				</partsToAffect>
			  </li>
		  </hediffGivers>
        </li>
		<li>
		  <minSeverity>0.6</minSeverity>
          <label>Strong</label>
		  <painOffset>0.65</painOffset>
		  <hediffGivers>
			<li Class="HediffGiver_Random">
				<hediff>HeartAttack</hediff>
				<mtbDays>12</mtbDays>
				<partsToAffect>
				  <li>Heart</li>
				</partsToAffect>
			  </li>
		  </hediffGivers>
        </li>
      </stages>
  </HediffDef>
  
</Defs>