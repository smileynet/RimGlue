<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Broots -->
<ThingDef ParentName="PlantBase">
	<defName>TM_Broots</defName>
	<label>wild white broots</label>
	<description>Small root-like fibrous fungus, they grow in the wild and are relatively hard to grow on purpose, tribal people know how to use them to prepare special medical beverages.</description>
	<statBases>
		<MaxHitPoints>55</MaxHitPoints>
		<Nutrition>0.08</Nutrition>
	</statBases>
	<graphicData>
		<texPath>Things/Plant/Broots</texPath>
		<graphicClass>Graphic_Random</graphicClass>
	</graphicData>
	<selectable>true</selectable>
	<pathCost>8</pathCost>
	<ingestible />
	<plant>
		<harvestWork>800</harvestWork>
		<immatureGraphicPath>Things/Plant/Broots</immatureGraphicPath>
		<leaflessGraphicPath>Things/Plant/Broots</leaflessGraphicPath>
		<sowMinSkill>6</sowMinSkill>
		<neverBlightable>true</neverBlightable>
		<sowResearchPrerequisites>
			<li>TM_TribalMedicalHerbs</li>
		</sowResearchPrerequisites>
		<wildClusterRadius>12</wildClusterRadius>
		<wildClusterWeight>500</wildClusterWeight>
		<mustBeWildToSow>false</mustBeWildToSow>
		<dieIfLeafless>false</dieIfLeafless>
		<maxMeshCount>16</maxMeshCount>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>TM_RawBroots</harvestedThingDef>
		<harvestYield>6</harvestYield>
		<sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
		</sowTags>
		<topWindExposure>0.1</topWindExposure>
		<growDays>7</growDays>
		<visualSizeRange>0.5~1</visualSizeRange>
		<wildOrder>2</wildOrder>
		<purpose>Health</purpose>
	</plant>
</ThingDef>

