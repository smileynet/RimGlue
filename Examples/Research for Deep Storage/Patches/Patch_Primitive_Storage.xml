<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Primitive Storage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>				
				<li Class="PatchOperationReplace">
                    <xpath>Defs/ResearchProjectDef[defName="VBY_NeoStorage"]</xpath>
                    <value>
                        <ResearchProjectDef>
							<defName>VBY_NeoStorage</defName>
							<label>primitive storage</label>
							<description>Build simple storage like woven baskets and dedicated storage tents.</description>
							<baseCost>225</baseCost>
							<techLevel>Neolithic</techLevel>
							<tab>DeepStorage</tab>
							<researchViewX>0</researchViewX>
							<researchViewY>1.5</researchViewY>
						</ResearchProjectDef>
                    </value>
                </li>
                
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ResearchProjectDef[defName="BasicStorage"]/prerequisites</xpath>
                    <value>
                        <li>VBY_NeoStorage</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>