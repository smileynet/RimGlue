<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ======================================= TribalArmor =======================================-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_TribalArmor</defName>
    <label>tribal armor</label>
    <description>A tough hide coat reinforced with wood slat armor.</description>
    <techLevel>Neolithic</techLevel>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <soundWorking>Recipe_Smelt</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TribalArmor/TribalArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>8</Mass>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
      <WorkSpeedGlobal>-0.08</WorkSpeedGlobal>
    </equippedStatOffsets>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <WoodLog>70</WoodLog>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Neck</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TribalArmor/TribalArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Tribal</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
