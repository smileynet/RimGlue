    </graphicData>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
