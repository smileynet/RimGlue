<Patch>



	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/RecipeDef[recipeUsers/li="Campfire" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/RecipeDef[recipeUsers/li="FueledStove" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/ThingDef[recipeMaker]/recipeMaker[recipeUsers/li="Campfire" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/ThingDef[recipeMaker]/recipeMaker[recipeUsers/li="FueledStove" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/RecipeDef[requiredGiverWorkType="Cooking" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/RecipeDef[@ParentName="CookMealBase" and not(recipeUsers)]</xpath>
		<value>
			<recipeUsers>
				<li>StoneOven</li>
			</recipeUsers>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>*/RecipeDef[@ParentName="CookMealBase" and not(recipeUsers/li="StoneOven")]/recipeUsers</xpath>
		<value>
			<li>StoneOven</li>
		</value>
	</Operation>	

</Patch>