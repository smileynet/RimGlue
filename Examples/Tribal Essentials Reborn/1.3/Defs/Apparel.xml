	<ThingDef ParentName="TE_ApparelMakeableBase">
		<defName>WovenCloak</defName>
		<description>A woven cloak made of dried grass, leather, or strips of softened tree bark to keep the sun and rain off.</description>
		<label>woven cloak</label>
		<recipeMaker>
			<researchPrerequisite>TribalEssentials</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>TailoringSpot</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Apparel/WovenCloak/WovenCloak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>35</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
			<li>Woody</li>
			<li>Grassy</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>20000</WorkToMake>
			<Mass>2.0</Mass>
			<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
			<ArmorRating_Heat>0.03</ArmorRating_Heat>
			<Insulation_Cold>8</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.04</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/WovenCloak/WovenCloak</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Tribal</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

