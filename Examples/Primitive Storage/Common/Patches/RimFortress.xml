<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>RimFortress: Dwarven Plants</li>
        </mods>
        <match Class="PatchOperationSequence">			
            <operations>
                <li Class="PatchOperationAdd">					
		          <xpath>Defs/ThingDef[defName="VBY_WoodPile"]/building/fixedStorageSettings/filter/thingDefs</xpath>
		            <value>
						  <li>DF_BlackCapLog</li>
						  <li>DF_BloodThornLog</li>
						  <li>DF_FungiWoodLog</li>
						  <li>DF_TowerCapLog</li>
						  <li>DF_TunnelTubeLog</li>
		            </value>
				</li>
                <li Class="PatchOperationAdd">					
		          <xpath>Defs/ThingDef[defName="VBY_WoodPile"]/building/defaultStorageSettings/filter/thingDefs</xpath>
		            <value>
						  <li>DF_BlackCapLog</li>
						  <li>DF_BloodThornLog</li>
						  <li>DF_FungiWoodLog</li>
						  <li>DF_TowerCapLog</li>
						  <li>DF_TunnelTubeLog</li>
		            </value>
				</li>
			</operations>
        </match>
	</Operation>
	
</Patch>