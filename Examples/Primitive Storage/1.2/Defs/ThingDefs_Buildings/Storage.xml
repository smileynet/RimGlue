<Defs>

	<!-- ==================== Clay Pots ==================== -->

  <ThingDef ParentName="LWM_DeepStorage" >
    <defName>VBY_Clay_Pot</defName>
    <label>stone pot</label>
    <description>A stone pot for storage.</description>
    <graphicData>
      <texPath>Things/HMC_Clay_Pot/HMC_Clay_Pot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <defaultPlacingRot>South</defaultPlacingRot>
    <uiIconPath>Things/HMC_Clay_Pot/HMC_Clay_Pot</uiIconPath>
    <castEdgeShadows>false</castEdgeShadows>
	<pathCost>40</pathCost>
	<fillPercent>0.3</fillPercent>
    <size>(1,1)</size>
    <statBases>
      <Beauty>0.5</Beauty>
      <MaxHitPoints>30</MaxHitPoints>
      <WorkToBuild>600</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>8</Mass>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Low</priority>
        <filter>
        </filter>
      </defaultStorageSettings>
	  <fixedStorageSettings>
        <filter>          
          <categories>
            <li>PlantFoodRaw</li>
            <li>Medicine</li>
            <li>Drugs</li>
            <li>PlantMatter</li>
          </categories>
          <thingDefs>
            <li>Gold</li><!-- so heavy! :o -->
            <li>Silver</li>
			<li>Jade</li>
			<li>Pemmican</li>
			<li>Kibble</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
    </building>
    <comps>
      <li Class="LWM.DeepStorage.Properties" >
        <minNumberStacks>1</minNumberStacks>
        <maxNumberStacks>5</maxNumberStacks> <!-- In-game 10 -->
        <timeStoringTakes>20</timeStoringTakes>
        <showContents>false</showContents>
		<overlayType>None</overlayType>
		<!--<maxTotalMass>80</maxTotalMass>   ??  -->
      </li>
	  <li><compClass>CompQuality</compClass></li>
	  <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Awful</minQualityForArtistic>
      </li>
    </comps>
    <researchPrerequisites Inherit="false" />	
	<inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

