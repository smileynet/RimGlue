<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="LWM_DeepStorage" Name="VBY_NeolithicStorageBase" Abstract="true">	
	<researchPrerequisites Inherit="false">
		<li>VBY_NeoStorage</li>
	</researchPrerequisites>
	<building>
	  <defaultStorageSettings>
		<filter>
			<specialFiltersToDisallow>
			  <li>AllowRotten</li>
			</specialFiltersToDisallow>
		</filter>
	  </defaultStorageSettings>
	</building>
  </ThingDef>

  <ThingDef ParentName="VBY_NeolithicStorageBase" Name="VBY_NeolithicStorageBaseWithArt" Abstract="true">
    <comps>
	  <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Awful</minQualityForArtistic>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Artistic</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_Quality">
            <curve>
              <points>
                <li>(0,0.12)</li> <!-- awful -->
                <li>(1,0.16)</li> <!-- poor -->
                <li>(2,0.20)</li> <!-- normal -->
                <li>(3,0.22)</li> <!-- good -->
                <li>(4,0.24)</li> <!-- excellent -->
                <li>(5,0.26)</li> <!-- masterwork -->
                <li>(6,0.28)</li> <!-- legendary -->
              </points>
            </curve>
          </li>
          <li Class="FocusStrengthOffset_BuildingDefsWithQuality">  <!-- Patch in Vases from PWB mod  -->
            <defs>
              <li>VBY_Clay_Pot</li>
              <li>VBY_Clay_Pot_Two</li>
              <li>VBY_Woven_Basket</li>
              <li>VBY_WovenBasket_Two</li>
            </defs>
            <radius>9.9</radius>
            <maxBuildings>8</maxBuildings>
            <focusPerQuality>
              <points>
                <li>(0,0.0)</li> <!-- awful -->
                <li>(1,0.0)</li> <!-- poor -->
                <li>(2,0.01)</li> <!-- normal -->
                <li>(3,0.01)</li> <!-- good -->
                <li>(4,0.01)</li> <!-- excellent -->
                <li>(5,0.02)</li> <!-- masterwork -->
                <li>(6,0.02)</li> <!-- legendary -->
              </points>
            </focusPerQuality>
            <explanationKey>MeditationFocusPerSculpture</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
          </li>
        </offsets>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
    </placeWorkers>
	<inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <tradeTags>
      <li>Art</li>
    </tradeTags>
    <statBases>
      <SellPriceFactor>1.10</SellPriceFactor>
      <MeditationFocusStrength>0.0</MeditationFocusStrength>
    </statBases>
    <thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>TableSculpting</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <designationCategory Inherit="false"/>
  </ThingDef>



