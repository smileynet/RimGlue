<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName = "CraftingSpot"]/statBases/WorkTableWorkSpeedFactor</xpath>
        <value>
            <WorkTableWorkSpeedFactor>0.25</WorkTableWorkSpeedFactor>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SimpleResearchBench"]</xpath>
		<value>
			<researchPrerequisites>
				<li>RimGlue_IndustrialResearch</li>
			</researchPrerequisites>
		</value>
	</Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="TableSculpting"]</xpath>
		<value>
			<researchPrerequisites>
				<li>RimGlue_IndustrialProduction</li>
			</researchPrerequisites>
		</value>
	</Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="FueledStove"]</xpath>
		<value>
			<researchPrerequisites>
				<li>RimGlue_IndustrialCooking</li>
			</researchPrerequisites>
		</value>
	</Operation>

    <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="TableButcher"]</xpath>
		<value>
			<researchPrerequisites>
				<li>RimGlue_IndustrialCooking</li>
			</researchPrerequisites>
		</value>
	</Operation>

    <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="ButcherSpot"]/statBases</xpath>
		<value>
			<statBases>
				<WorkToBuild>0</WorkToBuild>
				<WorkTableEfficiencyFactor>0.5</WorkTableEfficiencyFactor>
				<WorkTableWorkSpeedFactor>0.25</WorkTableWorkSpeedFactor>
                <Cleanliness>-30</Cleanliness>
			  </statBases>
		</value>
	</Operation>

    <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="ButcherSpot"]/description</xpath>
		<value>
			<description>A place for butchering animals. Due to the lack of equipment, butchering here yields only 50% of the meat and leather of each creature.</description>
		</value>
	</Operation>
</Patch>